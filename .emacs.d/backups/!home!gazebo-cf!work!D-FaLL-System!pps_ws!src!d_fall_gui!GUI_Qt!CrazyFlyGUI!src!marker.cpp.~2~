#include "marker.h"
#include "globalDefinitions.h"

#include <QPen>
#include <QBrush>


Marker::Marker(qreal x, qreal y, QGraphicsItem * parent)
    : QGraphicsEllipseItem(parent)
{
    _radius = 0.5 * TO_METERS; // x and y are top left coordinates
    _x = x - _radius/2;
    _y = y - _radius/2;
    this->setRect(QRectF(_x, _y, _radius, _radius));
    this->setPen(Qt::NoPen);
    this->setBrush(QColor(255, 0, 0));
    this->setZValue(10);        // max z value, should always be seen
}

