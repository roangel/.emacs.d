#include "CFLinker.h"


crazyFly::crazyFly(const CrazyflieData* p_crazyfly_msg, QGraphicsItem * parent)
    : QGraphicsSvgItem(":/images/drone_fixed.svg")
{
    updateCF(p_crazyfly_msg);
    m_width = DRONE_WIDTH;
    m_height = DRONE_HEIGHT;
}

crazyFly::~crazyFly()
{
    if(m_assigned)
    {
        m_assigned_cf_zone->removeLink();
    }
}
