#include "crazyFly.h"

#include <QPen>
#include <QBrush>


crazyFly::crazyFly(QPointF p, QGraphicsItem * parent)
    : QGraphicsSvgItem(":/images/drone.svg")
{
    QRectF original_b_rect = this->boundingRect();
    original_width = original_b_rect.width();
    original_height = original_b_rect.height();
}

crazyFly::~crazyFly()
{
}

QRectF crazyFly::boundingRect() const
{
    // return QRectF(-original_width/2, -original_height/2, original_width, original_height);
    return QRectF(-100, -100, 200, 200);
}

