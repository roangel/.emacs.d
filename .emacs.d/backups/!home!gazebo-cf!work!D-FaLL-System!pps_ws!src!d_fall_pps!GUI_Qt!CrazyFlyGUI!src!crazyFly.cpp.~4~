#include "crazyFly.h"

#include <QPen>
#include <QBrush>


crazyFly::crazyFly(QPointF position, qreal width, qreal height, QGraphicsItem * parent)
    : QGraphicsSvgItem(":/images/drone.svg")
{
    m_width = width;
    m_height = height;
}

crazyFly::~crazyFly()
{
}

QRectF crazyFly::boundingRect() const
{
    // return QRectF(-original_width/2, -original_height/2, original_width, original_height);
    return QRectF(-m_width/2, -m_height/2, m_width, m_heigth);
}

void crazyFly::paint(QPainter *painter, const QStyleOptionGraphicsItem *option, QWidget *widget)
{
    this->renderer()->render(painter,this->boundingRect());
}
